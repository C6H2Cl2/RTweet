<UserControl x:Class="RTweet.Windows.Control.PicturePreviewPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" Margin="0,0,0,5">
    <Grid>
        <Image x:Name="Image" HorizontalAlignment="Left" Height="100" Margin="0" VerticalAlignment="Top" Width="100" MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave"/>
        <Button x:Name="RemoveButton" Content="×" HorizontalAlignment="Right" Width="20" Background="{x:Null}" Visibility="Hidden" MouseEnter="RemoveButton_MouseEnter" Margin="0,5,5,0" Height="20" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
