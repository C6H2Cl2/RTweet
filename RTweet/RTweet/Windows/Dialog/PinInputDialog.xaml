<Window x:Class="RTweet.Windows.Dialog.PinInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="アカウントの連携" Height="136.024" Width="365.523" Closing="Window_Closing">
    <Grid>
        <Label x:Name="Label" Content="ブラウザに表示されたPINコードを入力してください" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="Enter" Content="決定" Margin="273,74,10,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="PinInput" Height="23" Margin="10,46,10,0" TextWrapping="Wrap" VerticalAlignment="Top" PreviewTextInput="PinInput_PreviewTextInput" KeyDown="PinInput_KeyDown"/>
        <Button x:Name="Cancel" Content="キャンセル" HorizontalAlignment="Left" Margin="193,74,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
